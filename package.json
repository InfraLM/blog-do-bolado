{
  "name": "editor-artigos-blog",
  "version": "1.0.0",
  "description": "Editor de Artigos para Blog Liberdade Médica",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --config.win.sign=null",
    "build-portable": "electron-builder --win portable --config.win.sign=null",
    "build-simple": "electron-builder --win dir --config.win.sign=null",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.liberdademedica.editor-artigos",
    "productName": "Editor de Artigos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/pg/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "EditorArtigos-Portable.exe"
    },
    "compression": "store",
    "removePackageScripts": true,
    "electronDownload": {
      "cache": "./electron-cache"
    }
  },
  "keywords": [
    "blog",
    "editor",
    "artigos",
    "medicina",
    "liberdade-medica"
  ],
  "author": "Liberdade Médica",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "pg": "^8.11.3"
  }
}
